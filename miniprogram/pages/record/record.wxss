.picker{
    margin-top: 3vh;
    margin-bottom: 3vh;
    justify-content: center;
    font-size: 22px;
    
}
.section{
    justify-content: center;
    background-color: rgb(190, 206, 206);
    border: 1px solid gray;
}
.record_list{
    height: 500px;
    margin-top: 10px;
    margin-left: 10px;
    margin-right: 10px;
    background-color: rgb(192, 192, 179);
    border-radius: 10px;
    box-shadow: 8px 8px 8px 0 rgba(0, 0, 0, 0.2);
}

.shuju{
    display: flex;
    width: 350px;
    height: 15vh;
    background-color: #62d2a2;
    border-radius: 10px;
    margin-top: 9px;
    margin-bottom: 9px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    flex-direction: row;
}