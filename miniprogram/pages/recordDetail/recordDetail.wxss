/* pages/recordDetail/recordDetail.wxss */
.big_box{
    display: flex;
    justify-content: space-evenly;
    flex-direction: column;
    align-items: center;
}

.top_out_box{
    width: 350px;
    height: 15vh;
    background-color: #62d2a2;
    border-radius: 10px;
    margin-top: 16px;
    margin-bottom: 9px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    flex-direction: row;
}

.top_in_name{
    margin-top: 10px;
    margin-left: 15px;
    margin-bottom: 10px;
    font-size: large;
    font-family: Georgia, 'Times New Roman', Times, serif;
}

.top_in_input{
    margin-left: 38px;
    height: 20vh;
}
.out_box{
    width: 350px;
    height: 26vh;
    background-color: #62d2a2;
    border-radius: 10px;
    margin-top: 9px;
    margin-bottom: 9px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    flex-direction: row;
}